{
	"name": "corp_webapp",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "export api_port=4000 api_endpoint=http://localhost:4000 ; node ./print_dotenv.cjs && npx tailwindcss -c ./tailwind.config.cjs -i ./src/input.css -o ./src/output.css --watch & vite --host --strictPort --port 3000 & nodemon ./api/server.cjs",
		"custom_start_frontend": "node ./print_dotenv.cjs && (rm -rf ./dist && npx tailwindcss -c ./tailwind.config.cjs -i ./src/input.css -o ./src/output.css && vite build --base ./ ) && (http-server --cors -p $(echo $frontend_port) -c 1 ./dist)",
		"custom_start_api" : "node ./print_dotenv.cjs && node ./api/server.cjs"
	},
	"dependencies": {
		"@emotion/react": "^11.9.3",
		"@emotion/styled": "^11.9.3",
		"@mui/icons-material": "^5.8.4",
		"@mui/material": "^5.9.0",
		"cors": "^2.8.5",
		"dotenv": "^16.0.1",
		"express": "^4.18.1",
		"formidable": "^2.0.1",
		"jsonwebtoken": "^8.5.1",
		"mysql": "^2.18.1",
		"nodemailer": "^6.7.7",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.3.0",
		"sharp": "^0.30.7"
	},
	"devDependencies": {
		"@types/react": "^18.0.15",
		"@types/react-dom": "^18.0.6",
		"@vitejs/plugin-react": "^2.0.0",
		"tailwindcss": "^3.1.6",
		"vite": "^3.0.0"
	}
}
